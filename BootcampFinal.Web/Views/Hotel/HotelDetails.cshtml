@model BootcampFinal.Domain.HotelDetails.Hotel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="card" style="width: 18rem;">
</div>


<div class="container">

    <h1>Hotel Adı: @Model.name</h1>
    <hr />

    <h1>Adres</h1>
    <h5>
        @foreach (var address in Model.address.addressLines)
        {
            address.ToString();
        }
    </h5>

    <h1>İletişim</h1>
    <h5>Tel.No: @Model.phoneNumber</h5>
    <h5>Fax.No: @Model.faxNumber</h5>
    <h5><a href="@Model.homePage">@Model.homePage</a></h5>





    <h1>Fotoğraflar</h1>
    <div class="col">
        <div class="row">
            @if (Model.seasons != null && Model.seasons[0].mediaFiles != null)
            {
                for (int i = 0; i < Model.seasons.Count; i++)
                {
                    foreach (var img in Model.seasons[i].mediaFiles)
                    {
                        <img class="card-img-top" src="@img.urlFull" style="max-height: 200px; max-width: 200px;" alt="Card image cap">
                    }
                }
            }
            else
            {
                <h5>Kayıtlı Fotoğraf Yok !!</h5>
            }
        </div>
    </div>


</div>